<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="vspi.MainWindow"
        Title="vspi"
        Width="400"
        Height="600">

	<ScrollViewer>
		<Border Padding="20">
			<StackPanel Spacing="20" HorizontalAlignment="Center">

				<Button x:Name="VolumeUpBtn" Content="Volume+" Click="OnVolumeUpClicked" Width="200"/>
				<Button x:Name="VolumeDownBtn" Content="Volume-" Click="OnVolumeDownClicked" Width="200"/>
				<Button x:Name="StopBtn" Content="Stop" Click="OnStopClicked" Width="200"/>
				<Button x:Name="BlankBtn" Content="Blank" Click="OnBlankClicked" Width="200"/>

				<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
					<ComboBox x:Name="FirstPicker" Width="200"/>
					<Button Content="Play" Click="OnExecuteFirstPicker" Width="100"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
					<ComboBox x:Name="SecondPicker" Width="200"/>
					<Button Content="Play/Pause" Click="OnExecuteSecondPicker" Width="100"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
					<ComboBox x:Name="ThirdPicker" Width="200"/>
					<Button Content="Execute" Click="OnExecuteThirdPicker" Width="100"/>
				</StackPanel>

			</StackPanel>
		</Border>
	</ScrollViewer>
</Window>
